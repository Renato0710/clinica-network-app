<% include partials/header %>

    <div class="container content">
        <div class="container content-login">
            <div class="container text-center title">
                <h1>Iniciar Sesion</h1>
            </div>
            <div class="container d-flex justify-content-center align-items-center form-login">
                <form class="form" action="/login" method="POST">
                    <input class="form-control usuario text-center" type="text" placeholder="DNI" name="dni">
                    <input class="form-control marginT-30 text-center" type="password" placeholder="Clave" name="clave">
                    <div class="container marginT-30 d-flex justify-content-center">
                        <button class='btn btn-info width-150' type="submit">Iniciar Sesion</button>
                    </div>
                </form>
            </div>
            <div class="container d-flex justify-content-center align-items-center form-card">
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal">
                    Importar Tarjeta
                </button>
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="height: 250px;">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content modal">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Importar Tarjeta</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form action="/selectCard" method="post" style="margin-top: 40px;">
                                    <a target="_blank" href= <%= url %>>Obtener Token</a><br>
                                    <input type="password" name="token" placeholder="Pegar Token aqui">
                                    <input type="file" name="card">
                                    <button type="submit" class="btn btn-primary">Adjuntar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    </body>

    <% include partials/footer %>